<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
      <PropertyGroup>
        <EmguCudaRTLinkTarget>Windows </EmguCudaRTLinkTarget>
		<EmguCudaRTBuildX86 Condition="'$(Platform)'=='AnyCPU' OR '$(Platform)'=='x86'">True</EmguCudaRTBuildX86>
        <EmguCudaRTBuildX64 Condition="'$(Platform)'=='AnyCPU' OR '$(Platform)'=='x64'">True</EmguCudaRTBuildX64>
		<EmguCudaRTNativeFileX64>$(MSBuildThisFileDirectory)x64\cublas64_${EMGU_TF_CUFFT_FILE_VERSION}.dll</EmguCudaRTNativeFileX64>
		<EmguCudaRTErrorMessage Condition="'$(EmguCudaRTBuildX86)'=='True'">X86 or AnyCPU is targeted, but this CUDA runtime package do not support 32-bit. PInvoke may fail on Windows X86 platform.</EmguCudaRTErrorMessage>
        <EmguCudaRTDeployMessage Condition="'$(EmguCudaRTBuildX64)'=='True' AND Exists('$(EmguCudaRTNativeFileX64)')">$(EmguCudaRTDeployMessage)x64 </EmguCudaRTDeployMessage>
        <EmguCudaRTErrorMessage Condition="'$(EmguCudaRTBuildX64)'=='True' AND !Exists('$(EmguCudaRTNativeFileX64)')">This package do not contain necessary binary for $(EmguCudaRTLinkTarget). X64 is targeted, but file $(EmguCudaRTNativeFileX64) is missing. PInvoke may fail on Windows X64 platform.</EmguCudaRTErrorMessage>
      </PropertyGroup>
      <ItemGroup Condition="'$(EmguCudaRTBuildX64)'=='True' AND Exists('$(EmguCudaRTNativeFileX64)')">
        <None Include="$(MSBuildThisFileDirectory)\x64\*.dll">
          <Link>x64\%(RecursiveDir)%(Filename)%(Extension)</Link>
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
      </ItemGroup>
	    <Target Name="EmguCudaRTPackageBuildImports" BeforeTargets="PrepareForBuild">
    <Message Condition="'$(EmguCudaRTLinkTarget)'!=''" Text="Emgu Cuda runtime nuget package compiling with $(EmguCudaRTLinkTarget) runtime." Importance="High" />
    <Warning Text="'$(EmguCudaRTErrorMessage)'" Condition="'$(EmguCudaRTErrorMessage)'!=''" />
    <Message Text="Emgu Cuda runtime Compiling with $(EmguCudaRTDeployMessage) runtime." Condition="'$(EmguCudaRTDeployMessage)'!=''" Importance="High" />
    <Message Text="No native binary is deployed by the Emgu Cuda runtime package." Condition="'$(EmguCudaRTDeployMessage)'==''" Importance="High" />
  </Target>
</Project>